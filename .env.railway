# GitLab Configuration
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=your_gitlab_token_here

# LLM Provider Configuration
LLM_PROVIDER=gemini

# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (если используешь OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Webhook Security
WEBHOOK_SECRET=your_webhook_secret_token_here

# Database Configuration (Railway автоматически предоставит DATABASE_URL)
# Локально для тестов используй SQLite:
# DATABASE_URL=sqlite:///./code_review.db
# На Railway будет автоматически: postgresql://...
DATABASE_URL=${DATABASE_URL}

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=${PORT:-8000}
DEBUG=false

# Analysis Settings
MAX_CODE_LENGTH=50000
ANALYSIS_TIMEOUT=300
MIN_SCORE_FOR_APPROVAL=7.0
AUTO_LABEL_MR=true
